<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/server"
        android:minWidth="80sp"
        android:gravity="center_horizontal"
        android:hint="@string/hint_nick"/>
    <EditText
        android:id="@+id/server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/port"
        android:minWidth="80sp"
        android:gravity="center_horizontal"
        android:hint="@string/hint_server"/>
    <EditText
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:inputType="number"
        android:minWidth="80sp"
        android:gravity="center_horizontal"
        android:hint="@string/hint_port"/>
    <EditText
        android:id="@+id/channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/port"
        android:minWidth="80sp"
        android:gravity="center_horizontal"
        android:hint="@string/hint_channel"/>
    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/channel"
        android:text="@string/send"
        android:onClick="login"/>
</RelativeLayout>